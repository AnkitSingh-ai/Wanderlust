  .privacy-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .privacy-hero {
    text-align: center;
    padding: 3rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 20px;
    margin-bottom: 3rem;
  }

  .privacy-hero h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .privacy-content {
    background: white;
    padding: 2rem;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .privacy-content h3 {
    color: #1a202c;
    margin-bottom: 1rem;
  }

  .privacy-content p {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }
